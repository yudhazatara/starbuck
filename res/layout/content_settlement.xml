<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:checked="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:padding="5dip"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"
        android:textSize="23dip" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/label_refNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/checkbox1"
                android:gravity="center"
                android:padding="5dip"
               android:text="Ref No"
                android:textColor="#000000"
                android:textSize="25dip" />

            <TextView
                android:id="@+id/refNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dip"
                android:layout_toRightOf="@+id/label_customername"
                android:gravity="right"
                android:paddingTop="4dip"
                android:text="100012001"
                android:textColor="#000000"
                android:textSize="25dip" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/label_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/label_customername"
                android:layout_below="@+id/label_customername"
                android:gravity="top"
                android:padding="3dip"
                android:paddingTop="2dip"
                android:text="Amount"
                android:textColor="#000000"
                android:textSize="25dip" />
            
            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/label_amount"
                android:layout_toRightOf="@+id/label_customername"
                android:gravity="right"
                android:layout_marginLeft="63dip"
                android:paddingTop="4dip"
                android:text="IDR 5.000.000"
                android:textColor="#000000"
                android:textSize="25dip" />
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>